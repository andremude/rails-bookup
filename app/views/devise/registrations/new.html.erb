<div class="d-flex flex-column justify-content-center align-items-center min-vh-100" style="background-color: #508bfc;">
  <div class="col-xl-4 my-auto">
    <div class="card shadow-2-strong" style="border-radius: 1rem;">
      <div class="card-body p-5 text-center">
        <h2 class="mb-3">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg", placeholder: "Email" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-lg", placeholder: "Password (#{@minimum_password_length} characters min.)" %>
          </div>

          <div class="form-outline mb-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-lg", placeholder: "Password confirmation" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block w-100 mb-4" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <br>
        <% if alert %>
          <p class="alert bg-danger text-white"><%= alert %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
